<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.enset.app_chat_javafx_sockets_threads.ui.ChatController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextArea fx:id="chatArea" editable="false" prefHeight="400" wrapText="true"/>

    <HBox spacing="10">
        <TextField fx:id="inputField" HBox.hgrow="ALWAYS" promptText="Type your message..."/>
        <Button text="Send" onAction="#handleSend"/>
    </HBox>

</VBox>
